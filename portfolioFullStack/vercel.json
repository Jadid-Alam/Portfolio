{
  "version": 2,
  "builds": [
    {
      "src": "portfolioBackend/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    },
    {
      "src": "portfolio/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "portfolio/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "portfolioBackend/wsgi.py"
    },
    {
      "src": "^/admin/(.*)",
      "dest": "portfolioBackend/wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "/portfolio/build/$1"
    }
  ],
  "rewrites": [{ "source": "/(.*)", "destination": "/index.html" }]
}