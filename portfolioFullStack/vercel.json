{
  "version": 2,
  "builds": [
    {
      "src": "portfolioBackend/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "portfolio/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "portfolio/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/portfolio/build/static/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "portfolioBackend/wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "/portfolio/build/$1"
    },
    {
      "src": "/django-static/(.*)",
      "dest": "portfolioBackend/staticfiles/$1"
    }
  ]
}